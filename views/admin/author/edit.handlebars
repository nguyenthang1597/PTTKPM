<div class="main-content">

    {{>header-admin}}

    <hr /> {{>breadcrumb-admin}}
    <h2>{{heading}}</h2>
    <form method="POST" class="form-horizontal form-groups-bordered" enctype="multipart/form-data">
        <div class="row">
            <div class="col-md-12">

                <div class="panel panel-primary" data-collapsed="0">
                    <div class="panel-heading">
                        <div class="panel-title">
                            {{heading}}
                        </div>
                    </div>

                    <div class="panel-body">
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Tên</label>

                            <div class="col-sm-8">

                                <input type="text" name="TEN" value="{{author.TEN}}" id="TEN" class="form-control" placeholder="Tên" required>

                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Ảnh</label>
                            <div class="col-sm-5">
                                {{#if author.picture}}
                                <img src="/upload/author/{{author.picture}}" width="400" height="auto" alt=""> {{else}}
                                <input type="file" name="picture" class="form-control"> {{/if}}
                            </div>
                        </div>

                        {{#if author.picture}}
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Chọn ảnh khác</label>
                            <div class="col-sm-5">
                                <input type="file" name="picture" class="form-control">
                            </div>
                        </div>
                        {{/if}}
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Tuổi</label>

                            <div class="col-sm-8">

                                <input type="text" name="TUOI" value="{{author.TUOI}}" id="TUOI" class="form-control" placeholder="Tuổi">

                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Ẩn tác giả</label>

                            <div class="col-sm-5">

                                <div class="bs-example">
                                    <div class="make-switch" data-on="primary" data-off="info">
                                        {{#if author.isHide}}
                                        <input type="checkbox" name="isHide" checked> {{else}}
                                        <input type="checkbox" name="isHide"> {{/if}}

                                    </div>
                                </div>

                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Thông tin</label>

                            <div class="col-sm-8">
                                <textarea name="THONGTIN" id="THONGTIN" class="textarea" placeholder="Thông tin" style="width: 100%; height: 200px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;">{{author.THONGTIN}}</textarea>

                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-8" style="text-align: center;">
                    <div class="bs-example">
                        <button type="submit" class="btn btn-green btn-icon">
                            Sửa thông tin tác giả
                            <i class="entypo-check"></i>
                        </button>
                    </div>

                </div>
            </div>
    </form>
    </div>

    <br />

</div>






