<div class="main-content">

    {{>header-admin}}

    <hr /> {{>breadcrumb-admin}}
    <h2>{{heading}}</h2>
    <form method="POST" class="form-horizontal form-groups-bordered">
        <div class="row">
            <div class="col-md-12">

                <div class="panel panel-primary" data-collapsed="0">
                    <div class="panel-heading">
                        <div class="panel-title">
                            {{heading}}
                        </div>
                    </div>

                    <div class="panel-body">
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Tên</label>

                            <div class="col-sm-8">

                                <input type="text" name="TEN" value="{{librarian.TEN}}" id="TEN" class="form-control" placeholder="Tên" required>

                            </div>
                        </div>
                    </div>
                    <div class="panel-body">
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Ngày sinh</label>

                            <div class="col-sm-8">

                                <input type="date" name="NGAYSINH" value="{{librarian.NGAYSINH}}" id="NGAYSINH" class="form-control" placeholder="Ngáy sinh"
                                    required>

                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Giới tính</label>
                        <div class="col-sm-5">
                            <select class="form-control" name="GIOITINH">
                                <option value="1">Nam</option>
                                <option value="0">Nữ</option>
                            </select>
                            <script>
                                $('select').val({{librarian.GIOITINH}})

                            </script>
                        </div>
                    </div>
                    <div class="panel-body">
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Địa chỉ</label>

                            <div class="col-sm-8">

                                <input type="text" name="DIACHI" value="{{librarian.DIACHI}}" id="DIACHI" class="form-control" placeholder="Địa chỉ" required>

                            </div>
                        </div>
                    </div>
                    <div class="panel-body">
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Email</label>

                            <div class="col-sm-8">

                                <input type="email" name="EMAIL" value="{{librarian.EMAIL}}" id="EMAIL" class="form-control" placeholder="Email" required>

                            </div>
                        </div>
                    </div>
                    <div class="panel-body">
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Số điện thoại</label>

                            <div class="col-sm-8">

                                <input type="text" name="SDT" value="{{librarian.SDT}}" id="SDT" class="form-control" placeholder="Số điện thoại" required>

                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-8" style="text-align: center;">
                    <div class="bs-example">
                        <button type="submit" class="btn btn-green btn-icon">
                            Cập nhật thông tin
                            <i class="entypo-check"></i>
                        </button>
                    </div>

                </div>
            </div>
    </form>
    </div>

    <br />

</div>






