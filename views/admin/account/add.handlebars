<div class="main-content">

    {{>header-admin}}

    <hr /> {{>breadcrumb-admin}}
    <h2>{{heading}}</h2>
    <form method="POST" class="form-horizontal form-groups-bordered">
        <div class="row">
            <div class="col-md-12">

                <div class="panel panel-primary" data-collapsed="0">
                    <div class="panel-heading">
                        <div class="panel-title">
                            {{heading}}
                        </div>
                    </div>

                    <div class="panel-body">
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Username</label>

                            <div class="col-sm-8">

                                <input type="text" name="USERNAME" value="" id="USERNAME" class="form-control" placeholder="Username" required>

                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Password</label>

                            <div class="col-sm-8">

                                <input type="text" name="PASSWORD" value="" id="PASSWORD" class="form-control" placeholder="Password">

                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Loại tài khoản</label>
                            <div class="col-sm-5">
                                <select class="form-control" name="ROLE">
                                    {{#ifCond user.ROLE '==' '2'}}
                                    <option value="1">Thủ thư</option>
                                    {{else}}
                                    <option value="1">Thủ thư</option>
                                    <option value="2">Admin</option>
                                    {{/ifCond}}
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-8" style="text-align: center;">
                    <div class="bs-example">
                        <button type="submit" class="btn btn-green btn-icon">
                            Thêm
                            <i class="entypo-check"></i>
                        </button>
                    </div>

                </div>
            </div>
    </form>
    </div>

    <br />

</div>






