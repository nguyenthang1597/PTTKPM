<div class="main-content">

    {{>header-admin}}

    <hr /> {{>breadcrumb-admin}}
    <h2>{{heading}}</h2>
    <form method="POST" class="form-horizontal form-groups-bordered">
        <div class="row">
            <div class="col-md-12">

                <div class="panel panel-primary" data-collapsed="0">
                    <div class="panel-heading">
                        <div class="panel-title">
                            {{heading}}
                        </div>
                    </div>

                    <div class="panel-body">
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Mã thẻ</label>
                            <div class="col-sm-8">
                                <input type="text" name="MA_THE" id="MA_THE" class="form-control" placeholder="Mã thẻ" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Sách</label>
                            <div class="col-sm-5">
                                <select class="form-control" name="MA_SACH" id="SACH">
                                    {{#each books}}
                                    <option value="{{MA_SACH}}">{{TEN}}</option>
                                    {{/each}}
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Số lượng còn lại</label>
                            <div class="col-sm-8">
                                <input type="text" name="SOLUONGCONLAI" id="SOLUONGCONLAI" class="form-control" readonly>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Số lượng</label>
                            <div class="col-sm-8">
                                <input type="text" name="SOLUONG" id="SOLUONG" class="form-control" required>
                            </div>
                        </div>
                    </div>
                    
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-8" style="text-align: center;">
                    <div class="bs-example">
                        <button type="submit" class="btn btn-green btn-icon">
                            Thêm
                            <i class="entypo-check"></i>
                        </button>
                    </div>

                </div>
            </div>
    </form>
    </div>

    <br />

</div>






