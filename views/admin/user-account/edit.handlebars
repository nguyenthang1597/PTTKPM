<div class="main-content">

    {{>header-admin}}

    <hr /> {{>breadcrumb-admin}}
    <h2>{{heading}}</h2>
    <form method="POST" class="form-horizontal form-groups-bordered">
        <div class="row">
            <div class="col-md-12">

                <div class="panel panel-primary" data-collapsed="0">
                    <div class="panel-heading">
                        <div class="panel-title">
                            {{heading}}
                        </div>
                    </div>

                    <div class="panel-body">
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Username</label>
                            <div class="col-sm-8">
                                <input type="text" name="USERNAME" value="{{account.USERNAME}}" id="USERNAME" class="form-control" placeholder="Tài khoản" required readonly>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Khoá tài khoản</label>
                            <div class="col-sm-5">
                                <div class="bs-example">
                                    <div class="make-switch" data-on="primary" data-off="info">
                                        {{#ifCond account.active '==' 0}}
                                        <input type="checkbox" name="active" checked> {{else}}
                                        <input type="checkbox" name="active"> {{/ifCond}}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-8" style="text-align: center;">
                    <div class="bs-example">
                        <button type="submit" class="btn btn-green btn-icon">
                            Sửa thông tin
                            <i class="entypo-check"></i>
                        </button>
                    </div>

                </div>
            </div>
    </form>
    </div>

    <br />

</div>






