<div id="page-wrapper">

    <div class="container-fluid">

        <!-- Page Heading -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                    Thông tin
                </h1>
                <ol class="breadcrumb">
                    <li>
                        <i class="fa fa-dashboard"></i>
                        <a href="/info">Quản lý</a>
                    </li>
                    <li class="active">
                        <i class="fa fa-edit"></i> Thông tin
                    </li>
                </ol>
            </div>
        </div>
        <!-- /.row -->

        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <form method="POST" accept-charset="utf-8">
                    <div class="row">
                        <div class="cotTrai col-md-7">
                            <div class="form-group">
                                <label>Họ và tên</label>
                                <input class="form-control" name="TEN" value="{{info.TEN}}" placeholder=''>
                            </div>



                            <div class="form-group">
                                <label>Ngày sinh</label>
                                <input type="date" name="NGAYSINH" id="" class="form-control" value="{{info.NGAYSINH}}" required="required">
                            </div>

                            <div class="form-group">
                                <label>Giới tính</label>
                                <select name="GIOITINH" id="input" class="form-control" required>
                                    {{#ifCond info.GIOITINH '==' 1}}
                                    <option value="1" selected="true">Nam</option>
                                    <option value="0">Nữ</option>
                                    {{else}}
                                    <option value="0" selected="true">Nữ</option>
                                    <option value="1">Nam</option>
                                    {{/ifCond}}
                                </select>
                            </div>

                        </div>
                        <!-- Cột thông tin -->

                    </div>

                    <div class="row">
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                            <div class="form-group">
                                <label>Địa chỉ</label>
                                <input class="form-control" name="DIACHI" value="{{info.DIACHI}}">
                            </div>

                            <div class="form-group">
                                <label>Email</label>
                                <input class="form-control" name="EMAIL" value="{{info.EMAIL}}">
                            </div>
                            <div class="form-group">
                                <label>CMND</label>
                                <input class="form-control" name="CMND" value="{{info.CMND}}">
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary center-block">Chỉnh sửa thông tin</button>
                            </div>
                        </div>

                    </div>
                    <!-- /.Row 2 -->
                </form>
                <!-- /. Form -->
            </div>
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->

</div>
