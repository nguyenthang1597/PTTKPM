<div id="templatemo_container">
    {{>user-menu}}
    <!-- end of menu -->

    <div id="templatemo_header">

    </div>
    <!-- end of header -->
    <div id="templatemo_content">
        <div id="templatemo_content_left">
            <div class="templatemo_content_left_section">
                <h1>Thể loại</h1>
                {{#each genres}}
                <ul>
                    <li>
                        <a href="/theloai/{{MA_THELOAI}}">{{TEN}}</a>
                    </li>
                </ul>
                {{/each}}
            </div>
            <div class="templatemo_content_left_section">
                <h1>Tác giả</h1>
                {{#each authors}}
                <ul>
                    <li>
                        <a href="/tacgia/{{MA_TACGIA}}">{{TEN}}</a>
                    </li>
                </ul>
                {{/each}}
            </div>
        </div>


        <div id="templatemo_content_right">

            <h1>Nổi bật</h1>
            <div class="slideshow-container">

                <!-- Full-width images with number and caption text -->
                {{#each highlights}}
                    <div class="mySlides fade">
                        <img src="/upload/book/{{picture}}" style="width:100%">
                        <div class="text">{{TEN}}</div>
                    </div>
                {{/each}}
                

                <!-- Next and previous buttons -->
                <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
                <a class="next" onclick="plusSlides(1)">&#10095;</a>
            </div>
            <br>





            <h1>Danh sách</h1>

            <div class="danhsach">
                {{#each books}}
                <div class="row">
                    {{#each this}}
                    <a href="/sach/{{MA_SACH}}">
                    <div class="box">
                        <img src="/upload/book/{{picture}}">
                        <div class="thongtin">
                            <p>{{TEN}}</p>
                            <p>Thể loại: {{THELOAI}}</p>
                            <p>Tác giả: {{TACGIA}}</p>
                            <p>Số lượng sách còn: {{SOLUONGCONLAI}}</p>
                        </div>
                    </div>
                    </a>
                    {{/each}}
                </div>
                {{/each}}
            </div>
            <!-- End danh sách các sách có trong thư viện -->
            <div class="cleaner_with_height">&nbsp;</div>
            <div class="pagination">
                <a href="#">&laquo;</a>
                {{#each pages}}
                <a href="#">{{this}}</a>
                {{/each}}
                <a href="#">&raquo;</a>
            </div>


        </div>
        <!-- end of content right -->

        <div class="cleaner_with_height">&nbsp;</div>
    </div>
    <!-- end of content -->

   {{>user-footer}}
    <!-- end of footer -->

</div>
<!-- end of container -->
{{#section 'scripts'}}
<script src="/assets/user/scripts/index.js"></script>
{{/section}}

